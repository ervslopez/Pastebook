@model IEnumerable<PastebookApp.PastebookService.GetFriendsList_Result>

@{
    Session["page"] = "FriendsList";
}
<div class="container" id="friendListContainer">
    <div id="innerContainer">
        @foreach (var item in Model)
        {
            <div class="friendContainer">
                <div>
                    @{
                        var base64 = Convert.ToBase64String(item.PROFILE_PIC);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <span role="button" class="friendPic">
                        <img src="@imgSrc" alt="Profile Picture" class="mainProfilePic img-circle" onclick="location.href='@Url.Action("ViewProfile", "Pastebook", new { username = item.USER_NAME})'" />
                    </span>
                </div>
                <div class="friendItem">
                    <span>@Html.DisplayFor(modelItem => item.FIRST_NAME) @Html.DisplayFor(modelItem => item.LAST_NAME)</span>
                </div>
                <div class="friendItem">
                    <span>@Html.DisplayFor(modelItem => item.ABOUT_ME)</span>
                </div>
            </div>
                        }
    </div>
</div>
