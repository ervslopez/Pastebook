@model IEnumerable<PastebookApp.PastebookService.GetFriendsList_Result>

@{
    ViewBag.Title = "ViewFriendList";
}

<h2>ViewFriendList</h2>
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <div class="form-inline">
                <div>
                    @{
                        var base64 = Convert.ToBase64String(item.PROFILE_PIC);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <span><img src="@imgSrc" alt="Profile Picture" class="mainProfilePic img-circle" onclick="ViewProfile(@item.USER_NAME)"/></span>
                    <span>Name: @Html.ActionLink(@item.FIRST_NAME + " " + @item.LAST_NAME, "ViewProfile", "Pastebook", new { username = @item.USER_NAME}, null) </span><br />
                    <span>Description: @Html.DisplayFor(modelItem => item.ABOUT_ME)</span>
                </div>
            </div>
                        }
    </div>
</div>


@Scripts.Render("~/bundles/jqueryval")
<script>
    function ViewProfile(user_name) {
        alert(user_name);
        
        }
</script>
}