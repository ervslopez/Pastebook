@model IEnumerable<PastebookApp.Models.NotificationViewModel>

@foreach (var item in Model.Take(20))
{
    if (item.notifType == 'L')
    {
        <li>
            <a role="button" href="#" onclick="location.href='@Url.Action("PreviewPost", "Pastebook", new { postID = @item.postID})'">
                <strong>@item.name</strong> 
                <p>has liked one of your posts.</p>
            </a>
        </li>
        <hr />
    }
    else if (item.notifType == 'C')
    {
        <li>
            <a role="button" href="#" onclick="location.href='@Url.Action("PreviewPost", "Pastebook", new { postID = @item.postID})'">
                <strong>@item.name</strong> 
                <p>has commented on one of your posts.</p>
            </a>
        </li>
        <hr />
    }
    else
    {
        <li>
            <a role="button" href="#" onclick="location.href='@Url.Action("ViewProfile", "Pastebook", new { username = @item.username})'">
                <strong>@item.name</strong>
                <p>has sent you a friend request.</p>
            </a>
        </li>
        <hr />
    }
    
}

<button type="button" class="btn btn-primary pull-right" onclick="location.href = '@Url.Action("Notification", "Pastebook")'">View All Notifications</button>