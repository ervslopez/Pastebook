        ViewBag.Title = "Pastebook";
    }*@
<link rel="stylesheet" type="text/css" href="~/Content/signupstyle.css">

<div class="container">
    <div id="front_pane">
        <div class="sign_up_bg">
            <div class="col-sm-6 forms-right-icons">
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-user"></i></div>
                    <div class="col-sm-10">
                        <h3>New Features</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-eye"></i></div>
                    <div class="col-sm-10">
                        <h3>Easy To Use</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-twitter"></i></div>
                    <div class="col-sm-10">
                        <h3>Social Integrated</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="log_in_bg">
            <div class="col-sm-10" id="welcome_message">
                <h1>Welcome to Pastebook.</h1>
                <h4>
                    Connect with your friends and other fascinating people. Get in-the-moment updates on the things that interest you.
                    And watch events unfold, in real time, from every angle.
                </h4>
            </div>
        </div>
    </div>

    <div id="moving_pane">
        <div class="black_pane">
            <div class="left_pane">
                <div id="subcontent">
                    <form class="front_form" name="signup_form" id="signup_form" method="post" enctype="multipart/form-data" onsubmit="return false;">
                        <div class="form-group">
                            <div>
                                <h2>Sign Up</h2>
                            </div>
                            <div id="loginBtn">
                                <button id="moveright">Login</button>
                            </div>
                        </div>
                        <p>Synth polaroid bitters chillwave pickled. Vegan disrupt tousled.</p>
                        <div class="form-group">
                            <label class="control-label" for="inputNormal">Username</label>
                            <input type="text" name="signup_username" id="signup_username" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="same_line form-group">
                            <label class="control-label" for="inputNormal">First Name</label>
                            <input type="text" name="firstName" id="firstName" value="" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="same_line sn form-group">
                            <label class="control-label" for="inputNormal">Last Name</label>
                            <input type="text" name="lastName" id="field_1" value="" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="inputNormal">Email (e.g. john.doe@google.com)</label>
                            <input type="text" name="signup_email" id="signup_email" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="inputNormal">Password</label>
                            <input type="password" name="signup_password" id="signup_password" value="" class="bp-suggestions form-control" cols="50"
                                   rows="10" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="inputNormal">Confirm Password</label>
                            <input type="password" name="signup_passwordConfirm" id="signup_passwordConfirm" value="" class="bp-suggestions form-control"
                                   cols="50" rows="10" />
                        </div>
                        <div class="form-group soninpt">
                            <label class="control-label" for="birthday">Birthday</label>
                            <input type="date" name="birthday" id="birthday" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="form-group soninpt">
                            <label class="control-label" for="inputNormal">Mobile Number</label>
                            <input type="number" name="field_2" id="field_2" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <input type="submit" name="signup_submit" id="signup_submit" value="Sign Up" class="btnProceed" />
                    </form>
                </div>
            </div>

            <div class="right_pane">
                <div id="subcontent">
                    <form name="login-form" class="front_form" id="sidebar-user-login" method="post" onsubmit="return false;">
                        <div class="form-group">
                            <div>
                                <h2>Login</h2>
                            </div>
                            <div id="signupBtn">
                                <button id="moveleft">Sign Up</button>
                            </div>
                        </div>
                        <p>Synth polaroid bitters chillwave pickled. Vegan disrupt tousled.</p>
                        <div class="form-group">
                            <label class="control-label" for="inputNormal">Username</label>
                            <input type="text" name="log" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <div class="form-group soninpt">
                            <label class="control-label" for="inputNormal">Password</label>
                            <input type="password" name="pwd" class="bp-suggestions form-control" cols="50" rows="10" />
                        </div>
                        <input type="submit" value="Login" class="btnProceed" tabindex="100" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $(window).load(function () {
                $('.form-control').on('focus blur', function (e) {
                    $(this).parents('.form-group').toggleClass('focused', (e.type === 'focus' || this.value.length > 0));
                }).trigger('blur');
            });

            $('#moveleft').click(function () {
                $('#moving_pane').animate({
                    'marginLeft': "0%" //moves left
                });

                $('.black_pane').animate({
                    'marginLeft': "100%" //moves right
                });
            });

            $('#moveright').click(function () {
                $('#moving_pane').animate({
                    'marginLeft': "50%" //moves right
                });

                $('.black_pane').animate({
                    'marginLeft': "0%" //moves right
                });
            });

        });
    </script>
}
